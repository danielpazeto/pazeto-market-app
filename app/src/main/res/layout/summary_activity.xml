<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pazeto.comercio.ui.SummaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_form_padding">

        <TextView
            android:id="@+id/tv_client_summary_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_form_padding"
            android:text="@string/client"
            android:textStyle="bold"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_form_padding"
            android:text="Data:"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ll_stock_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_section_header"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_form_padding"
            android:paddingTop="@dimen/activity_form_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_form_padding"
                android:text="Total em compras" />

            <TextView
                android:id="@+id/tv_total_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_form_padding"
                android:text="1580,22 R$" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sale_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_section_header"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_form_padding"
            android:paddingTop="@dimen/activity_form_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_form_padding"
                android:text="Total em vendas" />

            <TextView
                android:id="@+id/tv_total_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_form_padding"
                android:text="1580,22 R$" />
        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>